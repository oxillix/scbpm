{
  "manifest_version": 3,
  "name": "SoundCloud BPM",
  "description": "Make it easier for DJ's to search for songs based on BPM and Key",
  "version": "0.1",
  "host_permissions": ["https://soundcloud.com/"],

  "action": {
    "default_popup": "html/popup.html",
    "default_icon": {}
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "http://scbpm.com/",
    "ws://scbpm.com/",
    "wss://scbpm.com/"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": { "16": "assets/icon-16.png", "48": "assets/icon-48.png", "128": "assets/icon-128.png" },
  "content_scripts": [
    {
      "matches": ["https://soundcloud.com/*"],
      "js": ["sbpm.js"]
    }
  ]
}
